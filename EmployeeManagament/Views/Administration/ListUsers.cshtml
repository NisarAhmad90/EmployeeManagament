@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1 class="mb-4">All Users</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary mb-4 w-100">
        <i class="bi bi-person-plus"></i> Add New User
    </a>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light">
                        <strong>User ID:</strong> @user.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@user.UserName</h5>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Administration" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>No users created yet</h5>
        <p>Use the button below to create a new user.</p>
        <a class="btn btn-primary"
           asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Add New User
        </a>
    </div>
}
